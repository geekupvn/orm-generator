<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php" colors="true">
    <php>
        <var name="db_dsn" value="pgsql:host=localhost;port=5432;dbname=dao_generator"/>
        <var name="db_username" value="postgres"/>
        <var name="db_password" value="123"/>
        <var name="_path" value="__FILE__" />
    </php>

    <testsuites>
        <testsuite name="DAO-Generator Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./vendor</directory>
                <directory>./tests</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./log/report" charset="ISO-8859-1"
             highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>
