<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/TestMysql/bootstrap.php" colors="true">
    <php>
        <var name="db_dsn" value="mysql:host=localhost;port=3306;dbname=dao_generator"/>
        <var name="dbname" value="dao_generator" />
        <var name="db_username" value="root"/>
        <var name="db_password" value=""/>
        <var name="base_path" value="__FILE__" />
    </php>

    <testsuites>
        <testsuite name="DAO-Generator Test Suite">
            <directory>./tests/TestMysql</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./vendor</directory>
                <directory>./tests</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./log/report" charset="ISO-8859-1"
             highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>
